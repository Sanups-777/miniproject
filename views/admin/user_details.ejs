<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Display Data from MongoDB</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous"
    />
  </head>
  <style>
    body {
      background-color: #f4f4f4; /* Set a light background color */
      font-family: Arial, sans-serif; /* Set a fallback font */
      margin: 0;
      padding: 0;
    }

    th,
    td {
      text-align: left;
      border-bottom: 1px solid #ddd;
      background-color: #fff;
    }

    th {
      background-color: #f2f2f2; /* Light gray background for header */
    }

    tr:nth-child(even) {
      background-color: #f9f9f9; /* Alternate row background color */
    }

    .abutton {
      padding: 8px 12px;
      border: none;
      border-radius: 4px;
      background: -webkit-linear-gradient(
        left,
        rgba(33, 8, 28, 1),
        #4d1434,
        rgba(77, 20, 52, 1)
      );
      color: #fff; /* White text color */
      cursor: pointer;
      text-decoration: none;
    }

    .abutton:hover {
      background-color: #4d1434;
      color: white;
      text-decoration: none; /* Darker blue on hover */
    }
  </style>
  <body>
    <h1>Data from MongoDB</h1>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">name</th>
          <th scope="col">username</th>
          <th scope="col">email</th>
          <th scope="col">phno</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% userlist.forEach(Usersdata => { %>
        <tr>
          <td><%= Usersdata.name%></td>
          <td><%= Usersdata.username%></td>
          <td><%= Usersdata.email%></td>
          <td><%= Usersdata.phno%></td>
          <td>
            <form action="/admin/uremove" method="post">
              <input
                type="hidden"
                name="email"
                value="<%= Usersdata.email %>"
              />
              <button class="abutton" type="submit" name="Usersdata.email">
                Remove User
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
