    <script>

    const form = document.querySelector('form');
    const emailE=document.querySelector('.email.error');
    const passE=document.querySelector('.password.error');
    const route='/signup/users'

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      emailE.textContent='';
      passE.textContent='';

      const email = form.email.value;
      const password = form.password.value;
      try{
        const res = await fetch(route,{
          method: 'POST',
          body: JSON.stringify({ email , password}),
          headers: {'Content-Type':'application/json'}
        })
        const data =await res.json();
        console.log(data);
        if(data.errors)
        {
            emailE.textContent=data.errors.email;
            passE.textContent=data.errors.password;
        }
        if(data.newData)
        {
            location.assign('/homesaver/index');
        }
        else {
      // If the response is not okay (e.g., 404 or 500 error), handle it here
      console.error('Server responded with error:', res.statusText);
    }
      }

      catch(err)
      {
        console.log(err);
      }
    });

      function changeFormAction() {
        var userType;
        var radios = document.getElementsByName("slide");
        for (var i = 0; i < radios.length; i++) {
          if (radios[i].checked) {
            userType = radios[i].id;
            break;
          }
        }
        var form = document.querySelector("form");
        if (userType === "user") {
          route = "/signup/users";
        } else if (userType === "business") {
          route = "/signup/business";
        }
      }
    </script>
 
