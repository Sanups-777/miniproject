<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      body {
        background-color: #f4f4f4; /* Set a light background color */
        font-family: Arial, sans-serif; /* Set a fallback font */
        margin: 0;
        padding: 0;
      }

      th,
      td {
        text-align: left;
        border-bottom: 1px solid #ddd;
        background-color: #fff;
        max-width: 20px;
      }

      th {
        background-color: #f2f2f2; /* Light gray background for header */
      }

      tr:nth-child(even) {
        background-color: #f9f9f9; /* Alternate row background color */
      }

      .abutton {
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        background: -webkit-linear-gradient(
        left,
        rgba(33, 8, 28, 1),
        #4d1434,
        rgba(77, 20, 52, 1)
      ); 
        color: #fff; /* White text color */
        cursor: pointer;
        text-decoration: none;
      }

      .abutton:hover {
        background-color: #4d1434;;
        color: white;
        text-decoration: none; /* Darker blue on hover */
      }
    </style>
  </head>
  <body>
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Business Name</th>
            <th scope="col">Username</th>
            <th scope="col">Date</th>
            <th scope="col">Service</th>
            <th scope="col">Issue</th>
            <th scope="col">Accept</th>
            <th scope="col">Reject</th>
          </tr>
        </thead>
        <tbody>
          <% appointmentlist.forEach(Appointment => { %> <% if(Appointment.bname
          === business.name) { %>
          <tr>
            <td><%= Appointment.bname %></td>
            <td><%= Appointment.uname %></td>
            <td><%= Appointment.date %></td>
            <td><%= Appointment.service %></td>
            <td><%= Appointment.issue %></td>
            <td>
                <a
            href="/homesaver/business/accept_booking?appointmentId=<%=Appointment._id%>&businessId=<%=business._id%>"
            class="abutton"
            >Accept</a>
            <td>
              <a
          href="/homesaver/business/reject_booking?appointmentId=<%=Appointment._id%>&businessId=<%=business._id%>"
          class="abutton"
          >Reject</a>
              </form>
            </td>
          </tr>
          <% } %> <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
