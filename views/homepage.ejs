<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>homepage</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background: -webkit-linear-gradient(
          left,
          rgba(33, 8, 28, 1),
          #4d1434,
          rgba(77, 20, 52, 1)
        );
        background-color: #f9f9f9; /* Fallback color */
      }

      .navbar {
        background-color: #333;
        color: #fff;
        padding: 10px 0;
      }

      .container {
        margin: 0 auto;
        padding: 0 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo-link {
        display: flex;
        align-items: center;
      }

      .logo-img {
        width: 50px;
        height: auto;
        margin-right: 10px;
      }

      .nav-links {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }

      .nav-links li {
        display: inline;
        margin-right: 20px;
      }

      .nav-links li:last-child {
        margin-right: 0;
      }

      .nav-links a {
        color: #fff;
        text-decoration: none;
      }

      .search-container {
        display: flex;
        align-items: center;
        flex: 0 0 30%; /* Consume 30% of the width */
        padding: 0 11px; /* Increased padding */
      }

      .search-input {
        flex: 1; /* Take up remaining space */
        padding: 11px 16.5px; /* Increased padding */
        border: 2px solid #ccc;
        border-radius: 22px; /* 10% bigger */
        font-size: 15.4px; /* 10% bigger */
        outline: none;
        transition: all 0.3s ease;
      }

      .search-button {
        background-color: #4d1434; /* Updated color */
        color: white;
        border: none;
        border-radius: 22px; /* 10% bigger */
        padding: 11px 16.5px; /* Increased padding */
        margin-left: 5.5px; /* Increased margin */
        font-size: 15.4px; /* 10% bigger */
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .search-button:hover {
        background-color: #3c0f29; /* Adjusted hover color */
      }

      .search-input:focus {
        border-color: #4d1434;
        box-shadow: 0 0 4.4px 0 #4d1434;
      }

      .row {
        display: flex;
        justify-content: center; /* Center tiles horizontally */
        margin: 20px auto; /* Added margin */
        flex-wrap: wrap; /* Allow tiles to wrap to the next line */
      }

      .tile {
        width: 25%; /* Each tile occupies 25% of the page width */
        background: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        margin-right: 20px;
        margin-left: 20px;
        position: relative; /* Set position to relative */
      }

      .tile p {
        margin-bottom: 10px; /* Added spacing between paragraphs */
      }

      .tile a {
        background-color: #4d1434;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 8px 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        /* Position the button */
        position: absolute;
        bottom: 15px;
        right: 15px;
        text-decoration: none;
      }

      .tile a:hover {
        background-color: #3c0f29;
      }
    </style>
  </head>
  <body>
    <!-- Navigation Bar -->
    <nav class="navbar">
      <div class="container">
        <a
          href="/homesaver/mainpage"
          style="color: #ffffff; text-decoration: none"
        >
          <img
            src="http://localhost:3300/images/Logo.png"
            alt="Logo"
            style="width: 80px; height: auto; top: 10px; left: 10px"
          />
        </a>
        <!-- Search Container -->
        <div class="search-container">
          <form action="/search/home_search" method="get">
            <input
              type="text"
              class="search-input"
              name="service"
              placeholder="Search by service"
            />
            <button class="search-button" type="submit">Search</button>
          </form>
        </div>
        <!-- End Search Container -->
        <ul class="nav-links">
          <li><a href="/homesaver/mainpage">Home</a></li>
          <li><a href="#">Services</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Contact</a></li>
        </ul>
      </div>
    </nav>
    <% for (var i = 0; i < blist.length; i += 2) { %>
    <div class="row">
      <% if (i < blist.length) { %>
      <div class="tile">
        <p><strong>Name:</strong> <%= blist[i].name %></p>
        <p><strong>Phone:</strong> <%= blist[i].phone %></p>
        <p><strong>Email:</strong> <%= blist[i].email %></p>
        <a href="/homesaver/homepage/viewbusiness">Book Now</a>
      </div>
      <% } %> <% if (i + 1 < blist.length) { %>
      <div class="tile">
        <p><strong>Name:</strong> <%= blist[i + 1].name %></p>
        <p><strong>Phone:</strong> <%= blist[i + 1].phone %></p>
        <p><strong>Email:</strong> <%= blist[i + 1].email %></p>
        <a href="/homesaver/homepage/viewbusiness">Book Now</a>
      </div>
      <% } %>
    </div>
    <% } %>
  </body>
</html>
