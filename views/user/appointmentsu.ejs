<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      body {
        background-color: #f4f4f4; /* Set a light background color */
        font-family: Arial, sans-serif; /* Set a fallback font */
        margin: 0;
        padding: 0;
      }

      th,
      td {
        text-align: left;
        border-bottom: 1px solid #ddd;
        background-color: #fff;
        max-width: 20px;
      }

      th {
        background-color: #f2f2f2; /* Light gray background for header */
      }

      tr:nth-child(even) {
        background-color: #f9f9f9; /* Alternate row background color */
      }

      .abutton {
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        background-color: #007bff; /* Blue button color */
        color: #fff; /* White text color */
        cursor: pointer;
      }

      .abutton:hover {
        background-color: #0056b3; /* Darker blue on hover */
      }
    </style>
  </head>
  <body>
    <div class="container">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Business Name</th>
            <th scope="col">Username</th>
            <th scope="col">Date</th>
            <th scope="col">Service</th>
            <th scope="col">Issue</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <% appointmentlist.forEach(Appointment => { %> <% if(Appointment.uname
          === user.name) { %>
          <tr>
            <td><%= Appointment.bname %></td>
            <td><%= Appointment.uname %></td>
            <td><%= Appointment.date %></td>
            <td><%= Appointment.service %></td>
            <td><%= Appointment.issue %></td>
            <td>
              <strong
                ><%= Appointment.accepted ? 'Booked' : 'Unavailable' %></strong
              >
            </td>
          </tr>
          <% } %> <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
