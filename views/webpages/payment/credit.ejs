<head>
  <style>
    @import url("https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap");
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }
    html,
    body {
      display: grid;
      height: 100%;
      width: 100%;
      place-items: center;
      background: -webkit-linear-gradient(
        left,
        rgba(33, 8, 28, 1),
        #4d1434,
        rgba(77, 20, 52, 1)
      );
    }
    ::selection {
      background: #4d1434;
      color: #fff;
    }
    .wrapper {
      overflow: hidden;
      width: 500px;
      background: #fff;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0px 15px 20px rgba(0, 0, 0, 0.1);
    }
    .wrapper .title {
      font-size: 35px;
      font-weight: 600;
      text-align: center;
      margin-bottom: 10px;
    }
    .form-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
    }
    .form-inner form {
      width: 100%;
    }
    .form-inner .field {
      margin-top: 20px;
      position: relative;
      width: 100%;
    }
    .field label {
      display: block;
      margin-bottom: 5px;
      font-size: 14px;
      color: #333;
      font-weight: bold;
    }
    .field input {
      height: 50px;
      width: 400px;
      outline: none;
      padding-left: 15px;
      padding-right: 15px;
      border: 1px solid lightgrey;
      border-radius: 25px;
      transition: all 0.3s ease;
      font-size: 16px;
    }
    .field input:focus {
      border-color: #4d1434;
    }
    .btn {
      margin-top: 20px;
      width: 100%;
      height: 50px;
      position: relative;
    }
    .btn-layer {
      height: 100%;
      width: 100%;
      border-radius: 25px;
      position: absolute;
      top: 0;
      left: 0;
      background: -webkit-linear-gradient(
        left,
        rgba(33, 8, 28, 1),
        #4d1434,
        rgba(77, 20, 52, 1)
      );
      z-index: -1;
      transition: all 0.3s ease;
    }
    .btn input[type="submit"] {
      height: 100%;
      width: 100%;
      border: none;
      background: -webkit-linear-gradient(
        left,
        rgba(33, 8, 28, 1),
        #4d1434,
        rgba(77, 20, 52, 1)
      );
      color: #fff;
      font-size: 18px;
      font-weight: 500;
      cursor: pointer;
      z-index: 1;
      position: relative;
      border-radius: 25px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s ease;
    }
  </style>
</head>
<%- include('../../nav-footer/navbardisplay') %>
<body>
  <div class="wrapper">
    <div class="title">Check Out</div>
    <div class="form-container">
      <div class="form-inner">
        <form
          id="checkout-form"
          action="/homesaver/payment/credit?userId=<%=appointmentId%>&userId=<%=userId%>"
          method="post"
          autocomplete="off"
          onsubmit="return validateForm()"
        >
          <div class="field">
            <label for="cardholder-name">Cardholder Name</label>
            <input
              type="text"
              id="cardholder-name"
              placeholder="Cardholder Name"
              required
            />
          </div>
          <div class="field">
            <label for="card-number">Card Number</label>
            <input
              type="text"
              id="card-number"
              placeholder="Card Number"
              required
              maxlength="19"
              oninput="formatCardNumber(this)"
              pattern="\d{4}-\d{4}-\d{4}-\d{4}"
              title="Please enter a valid card number in the format xxxx-xxxx-xxxx-xxxx"
            />
          </div>
          <div class="field">
            <label for="expiry-date">Expiration Date (MM/YY)</label>
            <input
              type="text"
              id="expiry-date"
              placeholder="MM/YY"
              required
              pattern="(0[1-9]|1[0-2])\/?([0-9]{2})"
              title="Please enter a valid expiration date in the format MM/YY"
              oninput="formatExpiryDate(this)"
            />
          </div>
          <div class="field">
            <label for="cvv">CVV</label>
            <input
              type="password"
              id="cvv"
              placeholder="CVV"
              required
              pattern="\d{3}"
              title="Please enter a valid 3-digit CVV"
            />
          </div>
          <div class="field btn">
            <div class="btn-layer"></div>
            <input type="submit" value="Pay Now" />
          </div>
        </form>
      </div>
    </div>
  </div>

  <script>
    function formatCardNumber(input) {
      const value = input.value.replace(/\D/g, "").substring(0, 16);
      const sections = value.match(/\d{1,4}/g);
      if (sections) {
        input.value = sections.join("-");
      }
    }

    function formatExpiryDate(input) {
      const value = input.value.replace(/\D/g, "").substring(0, 4);
      if (value.length >= 3) {
        input.value = value.substring(0, 2) + "/" + value.substring(2, 4);
      } else {
        input.value = value;
      }
    }

    function validateForm() {
      let valid = true;

      const cardholderName = document.getElementById("cardholder-name").value;
      const cardNumber = document.getElementById("card-number").value;
      const expiryDate = document.getElementById("expiry-date").value;
      const cvv = document.getElementById("cvv").value;

      const cardholderNameError = document.getElementById(
        "cardholder-name-error"
      );
      const cardNumberError = document.getElementById("card-number-error");
      const expiryDateError = document.getElementById("expiry-date-error");
      const cvvError = document.getElementById("cvv-error");

      if (cardholderNameError) cardholderNameError.textContent = "";
      if (cardNumberError) cardNumberError.textContent = "";
      if (expiryDateError) expiryDateError.textContent = "";
      if (cvvError) cvvError.textContent = "";

      if (!/^[a-zA-Z\s]+$/.test(cardholderName)) {
        if (cardholderNameError)
          cardholderNameError.textContent = "Please enter a valid name.";
        valid = false;
      }

      if (!/^\d{4}-\d{4}-\d{4}-\d{4}$/.test(cardNumber)) {
        if (cardNumberError)
          cardNumberError.textContent =
            "Please enter a valid card number in the format xxxx-xxxx-xxxx-xxxx.";
        valid = false;
      }

      const [month, year] = expiryDate.split("/");
      const currentDate = new Date();
      const selectedDate = new Date(`20${year}-${month}-01`);

      if (selectedDate < currentDate) {
        if (expiryDateError)
          expiryDateError.textContent =
            "Please select a valid expiration date.";
        valid = false;
      }

      if (!/^\d{3}$/.test(cvv)) {
        if (cvvError)
          cvvError.textContent = "Please enter a valid 3-digit CVV.";
        valid = false;
      }

      return valid;
    }
  </script>
</body>
